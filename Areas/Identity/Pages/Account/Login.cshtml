@page
@model LoginModel

@{
     Layout = "_AuthLayout";
    ViewData["Title"] = "Log in";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-4 text-center">

                        <div class="mb-md-4 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <!--  Form starts here -->
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <!-- Email -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.EmailOrUsername" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.EmailOrUsername" class="form-label text-white"></label>
                                    <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label text-white"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <!-- Remember Me -->
                                <div class="form-check text-start mb-4">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-check-label text-white">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                </div>

                                <!-- Submit -->
                                <button type="submit" id="login-submit" class="btn btn-outline-light btn-lg px-5 w-100">Login</button>

                                <p class="small mt-3 mb-5 pb-lg-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-white-50">Forgot your password?</a>
                                </p>

                                <!-- External login providers -->
                                @if (Model.ExternalLogins?.Count > 0)
                                {
                                    <div class="mt-3">
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-outline-light btn-lg mb-2 w-100" name="provider" value="@provider.Name" 
                                                    formaction="@Url.Page("./ExternalLogin", new { returnUrl = Model.ReturnUrl })">
                                                Log in with @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                }
                            </form>
                            <!--  End of Form -->
                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? 
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
