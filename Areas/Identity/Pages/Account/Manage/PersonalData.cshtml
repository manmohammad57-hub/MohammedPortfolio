@page
@model PersonalDataModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 450px;">
        <h3 class="text-center mb-3">@ViewData["Title"]</h3>

        <p class="text-center text-muted mb-3">
            Your account contains personal data that you have provided to us.  
            You can download or permanently delete that data below.
        </p>

        <div class="alert alert-warning small text-center mb-4">
            <strong>Warning:</strong> Deleting this data will permanently remove your account.  
            This action <u>cannot</u> be undone.
        </div>

        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100 mb-3">
            <i class="bi bi-trash"></i> Delete My Account
        </a>

        <a 
            asp-area="Identity"
           asp-page="/Account/Manage/Index"
            class="btn btn-outline-secondary w-100">
            ← Back
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
