@page
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    var user = await UserManager.GetUserAsync(User);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Sidebar Navigation -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-3">
                    <!-- Display User Info -->
                    <div class="mb-3 text-center">
                        <i class="fa fa-user-circle fa-3x mb-2 text-primary"></i>
                        <div class="mb-3">
                            <label class="form-label fw-bold">User Name</label>
                            <input type="text" class="form-control text-center" value="@(user?.UserName?.Split('@')[0])" readonly />
                        </div>
                    </div>

                    <!-- Navigation -->
                    <ul class="nav nav-pills flex-column mb-3">
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                                <i class="fa fa-user me-2"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                                <i class="fa fa-envelope me-2"></i>Email
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                                <i class="fa fa-lock me-2"></i>Password
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                                <i class="fa fa-database me-2"></i>Personal Data
                            </a>
                        </li>
                    </ul>

                    <!-- Add Admin Button -->
                    <a asp-area="Identity" asp-page="/Account/Register"
                       class="btn btn-primary w-100 mt-3 d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-person-plus"></i> Add Admin
                    </a>

                    <br /><br />

                    <!-- Logout Form -->
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-danger w-100 d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Profile Form -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">@ViewData["Title"]</h3>
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" disabled />
                            <label asp-for="Username" class="form-label"></label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">
                            <i class="fa fa-save me-2"></i>Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
