@page
@model RegisterModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-4 text-center">

                        <div class="mb-md-4 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                            <p class="text-white-50 mb-5">Create your account</p>

                            <!--  Form starts here -->
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <!-- Email -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label text-white"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label text-white"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword" class="form-label text-white"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <!-- Submit -->
                                <button id="registerSubmit" type="submit" class="btn btn-outline-light btn-lg px-5 w-100">Register</button>

                                <!-- External logins -->
                                @if (Model.ExternalLogins?.Count > 0)
                                {
                                    <div class="mt-3">
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-outline-light btn-lg mb-2 w-100" name="provider" value="@provider.Name"
                                                    formaction="@Url.Page("./ExternalLogin", new { returnUrl = Model.ReturnUrl })">
                                                Sign up with @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                }
                            </form>
                            <!--  End of Form -->
                        </div>

                        <div>
                            <p class="mb-0">
                                Already have an account?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-white-50 fw-bold">Login</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
