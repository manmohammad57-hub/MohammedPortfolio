@model IEnumerable<MohammedPortfolio.Models.Skill>
@{
    ViewData["Title"] = "Skills Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="section py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Skills Dashboard</h2>

        <div class="text-end mb-4">
            <a asp-area="Admin"
               asp-controller="Skills"
               asp-action="Create"
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Skill
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Level (%)</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var skill in Model)
                            {
                                <tr>
                                    <td>@skill.Id</td>
                                    <td>@skill.SkillName</td>
                                    <td>@skill.Level%</td>
                                    <td>@skill.Description</td>
                                    <td class="py-3">
                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            <a asp-area="Admin"
                                               asp-controller="Skills"
                                               asp-action="Edit"
                                               asp-route-id="@skill.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <form asp-area="Admin"
                                                  asp-controller="Skills"
                                                  asp-action="Delete"
                                                  asp-route-id="@skill.Id"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this skill?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted mt-4">
                        No skills found. Add some skills to display here.
                    </p>
                }
            </div>
        </div>
    </div>
</section>
