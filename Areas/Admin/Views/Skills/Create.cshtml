@model MohammedPortfolio.Models.Skill
@{
    ViewData["Title"] = "Add New Skill";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="section">
    <div class="container">
        <h2 class="mb-4">Add New Skill</h2>

        <form asp-action="Create" method="post" >
            <div class="mb-3">
                <label asp-for="SkillName" class="form-label"></label>
                <input asp-for="SkillName" class="form-control" />
                <span asp-validation-for="SkillName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Level" class="form-label"></label>
                <input asp-for="Level" type="number" class="form-control" min="1" max="100"/>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Skill
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
