@model MohammedPortfolio.Models.Skill
@{
    ViewData["Title"] = "Edit Skill";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- ===== Edit Skill Section ===== -->
<section id="edit-skill-section" class="section bg-light py-5">
    <div class="container" data-aos="fade-up">

        <!-- Section Title -->
        <div class="text-center mb-4">
            <h2>Edit Skill</h2>
            <p>Update your skill information below.</p>
        </div>

        <!-- Form -->
        <form 
            asp-area="Admin"
            asp-controller="Skills"
            asp-action="Edit"
            asp-route-id="@Model.Id"
            method="post"
            class="mx-auto"
            style="max-width: 700px;">

            <input type="hidden" asp-for="Id" />

            <!-- Skill Name -->
            <div class="mb-3">
                <label asp-for="SkillName" class="form-label"></label>
                <input asp-for="SkillName" class="form-control" placeholder="Enter skill name" />
                <span asp-validation-for="SkillName" class="text-danger"></span>
            </div>

            <!-- Skill Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write skill description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Skill Level -->
            <div class="mb-3">
                <label asp-for="Level" class="form-label">Skill Level (%)</label>
                <input asp-for="Level" type="number" class="form-control" min="0" max="100" placeholder="Enter skill level (0-100)" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <!-- Actions -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 me-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-area="Admin" asp-controller="Skills" asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</section>
<!-- ===== End Edit Skill Section ===== -->
