@model IEnumerable<MohammedPortfolio.Models.Bio>

@{
    ViewData["Title"] = "Bio Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="section py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Bio Dashboard</h2>

        <div class="text-end mb-4">
            <a asp-area="Admin"
               asp-controller="Dashboard_Admin"
               asp-action="CreateBio"
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Bio
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>NameBoi</th>
                                <th>Content</th>
                                <th>AboutId</th>
                                <th>SkillId</th>
                                <th>ServiceId</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bio in Model)
                            {
                                <tr>
                                    <td>@bio.Id</td>
                                    <td>@bio.NameBoi</td>
                                    <td class="text-start">@bio.Content</td>
                                    <td>@bio.AboutId</td>
                                    <td>@bio.SkillId</td>
                                    <td>@bio.ServiceId</td>
                                    <td class="py-3">

                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            <a asp-area="Admin"
                                               asp-controller="Dashboard_Admin"
                                               asp-action="EditBio"
                                               asp-route-id="@bio.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <form asp-area="Admin"
                                                  asp-controller="Dashboard_Admin"
                                                  asp-action="DeleteBio"
                                                  asp-route-id="@bio.Id"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this bio?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted mt-4">
                        No Bio records found. Add some Bio entries to display here.
                    </p>
                }
            </div>
        </div>
    </div>
</section>
