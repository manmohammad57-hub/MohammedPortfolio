@model IEnumerable<MohammedPortfolio.Models.Category>

@{
    ViewData["Title"] = "Project Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- =================== CATEGORY SECTION =================== -->
<section class="section py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Category Dashboard</h2>
        <div class="section-title text-center" data-aos="fade-up">
            <h2>Categories</h2>
        </div>

        <div class="text-end mb-4">
            <a asp-area="Admin"
               asp-controller="Dashboard_Admin"
               asp-action="CreateCategroy"
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>@category.CategoryName</td>
                                    <td class="py-3">
                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            <a asp-area="Admin"
                                               asp-controller="Dashboard_Admin"
                                               asp-action="EditCategroy"
                                               asp-route-id="@category.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <form asp-area="Admin"
                                                  asp-controller="Dashboard_Admin"
                                                  asp-action="DeleteCategory"
                                                  asp-route-id="@category.Id"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted mt-4">No categories found. Add some categories to display here.</p>
                }
            </div>
        </div>
    </div>
</section>

