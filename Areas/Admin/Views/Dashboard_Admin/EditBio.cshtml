@model MohammedPortfolio.Models.Bio

@{
    ViewData["Title"] = "Edit Bio";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4 text-center"> Edit Bio </h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="EditBio" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="NameBoi" class="form-label">الاسم</label>
        <input asp-for="NameBoi" class="form-control" />
        <span asp-validation-for="NameBoi" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Content" class="form-label">المحتوى</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SkillId" class="form-label">المهارة</label>
        <input asp-for="SkillId" class="form-control" />
        <span asp-validation-for="SkillId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ServiceId" class="form-label">الخدمة</label>
        <input asp-for="ServiceId" class="form-control" />
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AboutId" class="form-label">حول</label>
        <input asp-for="AboutId" class="form-control" />
        <span asp-validation-for="AboutId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> حفظ التعديلات</button>
    <a asp-action="BioDashboard" asp-controller="Dashboard_Admin" asp-area="Admin" class="btn btn-secondary ms-2">Back </a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
