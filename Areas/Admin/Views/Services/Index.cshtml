@model MohammedPortfolio.Models.ViewModels.ServiceViewModel
@{
    ViewData["Title"] = "Service Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- section of Service -->
<section class="section py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Service Dashboard</h2>
        <div class="section-title text-center" data-aos="fade-up">
            <h2>Services</h2>
        </div>

        <!-- Add button with extra spacing below -->
        <div class="text-end mb-4">
            <a asp-area="Admin"
               asp-controller="Services"
               asp-action="Create"
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Service
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                @if (Model.Services != null && Model.Services.Any())
                {
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Icon URL</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.Services)
                            {
                                <tr>
                                    <td>@service.Id</td>
                                    <td>@service.Title</td>
                                    <td>@service.Description</td>
                                    <td>@service.IconUrl</td>
                                    <td class="py-3">
                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            <a asp-area="Admin"
                                               asp-controller="Services"
                                               asp-action="Edit"
                                               asp-route-id="@service.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <form asp-area="Admin"
                                                  asp-controller="Services"
                                                  asp-action="Delete"
                                                  asp-route-id="@service.Id"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this service?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted mt-4">No Services found. Add some services to display here.</p>
                }
            </div>
        </div>
    </div>
</section>


<section class="section">
    <div class="container">
        <div class="section-title text-center" data-aos="fade-up">
            <h2>Implementation Steps</h2>
        </div>

        <div class="text-end mb-3">
            <a asp-area="Admin"
               asp-controller="Services"
               asp-action="CreateStep"
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Step
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (Model.ImplementationSteps != null && Model.ImplementationSteps.Any())
                {
                    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Step #</th>
                                <th>Step Title</th>
                                <th>Description</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ImplementationSteps)
                            {
                                <tr>
                                    <td>@item.StepNumber</td>
                                    <td>@item.StepTitle</td>
                                    <td>@item.Description</td>
                                    <td>@item.Duration</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            <a asp-area="Admin"
                                               asp-controller="Services"
                                               asp-action="EditStep"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-primary me-2">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <form asp-area="Admin"
                                                  asp-controller="Services"
                                                  asp-action="DeleteStep"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  style="display:inline;"
                                                  onsubmit="return confirm('Are you sure you want to delete this step?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted mt-4">No Implementation Steps found. Add some steps to display here.</p>
                }
            </div>
        </div>
    </div>
</section>






