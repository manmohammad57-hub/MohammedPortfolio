@model MohammedPortfolio.Models.ImplementationStep
@{
    ViewData["Title"] = "Edit Step";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- ===== Edit Skill Section ===== -->
<section id="edit-skill-section" class="section bg-light py-5">
    <div class="container" data-aos="fade-up">

        <!-- Section Title -->
        <div class="text-center mb-4">
            <h2>Edit Step</h2>
            <p>Update your Step information below.</p>
        </div>

        <!-- Form -->
        <form 
            asp-area="Admin"
            asp-controller="Services"
            asp-action="EditStep"
            asp-route-id="@Model.Id"
            method="post"
            class="mx-auto"
            style="max-width: 700px;">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="StepTitle" class="form-label"></label>
                <input asp-for="StepTitle" class="form-control" />
                <span asp-validation-for="StepTitle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration"  class="form-control"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StepNumber" class="form-label"></label>
                <input asp-for="StepNumber" type="number"  class="form-control" />
                <span asp-validation-for="StepNumber" class="text-danger"></span>
            </div>


            <!-- Actions -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 me-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</section>
<!-- ===== End Edit Skill Section ===== -->
