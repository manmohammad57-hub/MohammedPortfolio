@model MohammedPortfolio.Models.ViewModels.ProjectViewModel
@{
    ViewData["Title"] = "All Projects";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- =================== PROJECT SECTION =================== -->
<section class="section py-5 bg-light">
    <div class="container">
        <div class="section-title text-center mb-5" data-aos="fade-up">
            <h2 class="fw-bold text-primary">Projects</h2>
            <p class="text-muted">Explore my recent works and creative projects.</p>
        </div>

        <div class="text-end mb-4">
            <a asp-area="Admin"
               asp-controller="Projects"
               asp-action="CreateProject"
               class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle"></i> Add New Project
            </a>
        </div>

        @if (Model.Projects != null && Model.Projects.Any())
        {
            <div class="row g-4">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
                            <!-- Image -->
                            @if (project.Image != null && project.Image.Length > 0)
                            {
                                var base64 = Convert.ToBase64String(project.Image);
                                <img src="data:image/png;base64,@base64" 
                                     alt="@project.Title" 
                                     class="card-img-top" 
                                     style="height: 220px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white text-center py-5">
                                    <i class="bi bi-image" style="font-size: 2rem;"></i>
                                    <p class="mb-0 mt-2">No Image</p>
                                </div>
                            }

                            <!-- Card Body -->
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@project.Title</h5>
                                <p class="card-text text-muted small mb-2">
                                    @if (project.Description?.Length > 100)
                                    {
                                        @(project.Description?.Length > 100 
                                            ? project.Description.Substring(0, 100) + "..." 
                                            : project.Description)
                                    }
                                    else
                                    {
                                        @project.Description
                                    }
                                </p>

                                <span class="badge bg-primary-subtle text-primary mb-3">
                                    @project.Category?.CategoryName
                                </span>

                                <div class="mt-auto">
                                    @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                    {
                                        <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark me-2">
                                            <i class="bi bi-github"></i> GitHub
                                        </a>
                                    }

                                    @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                                    {
                                        <a href="@project.LiveDemoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-box-arrow-up-right"></i> Demo
                                        </a>
                                    }
                                </div>
                            </div>

                            <!-- Footer Buttons -->
                            <div class="card-footer bg-white border-0 d-flex justify-content-between">

                                <a asp-area="Admin"
                                   asp-controller="Projects"
                                   asp-action="EditProject"
                                   asp-route-id="@project.Id"
                                   class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>


                                <form asp-area="Admin"
                                      asp-controller="Projects"
                                      asp-action="DeleteProject"
                                      asp-route-id="@project.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this project?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted mt-5 fs-5">
                No projects found. Add some projects to display here.
            </p>
        }
    </div>
</section>
